    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug docker",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "log": true,
            "externalConsole": false,
            "pathMappings": {
                "/var/www/api": "${workspaceRoot}"
            },
            "ignore": ["vendor/**/*.php"]
        },
        {
            "name": "Listen for XDebug localhost",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "log": true,
            "externalConsole": false,
            "ignore": ["vendor/**/*.php"]
        }
    ]
}
